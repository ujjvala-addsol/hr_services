<openerp>
    <data>
        <!-- Create new activity for the new state -->
		
		 <record id="sale.act_sent" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">sent</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'sent'})</field>
        </record>
        <record id="act_submit" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">chkapproved</field>
            <field name="kind">dummy</field>
            
        </record>
		
		<record id="act_my_new_state" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">my_new_state</field>
            <field name="kind">function</field>
            <field name="action">action_my_new_function()</field>
			<field name="split_mode">OR</field>
        </record>
		
		<record id="sale.act_router" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">router</field>
            <field name="kind">function</field>
            <field name="action">action_wait()</field>
            <field name="split_mode">OR</field>
        </record>
		
		 <record id="sale.act_wait_invoice" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">wait_invoice</field>
        </record>

        <record id="sale.act_done" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">done</field>
            <field name="flow_stop">True</field>
            <field name="kind">function</field>
            <field name="action">action_done()</field>
            <field name="join_mode">AND</field>
        </record>

        <record id="sale.act_cancel" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">cancel</field>
            <field name="flow_stop">True</field>
            <field name="kind">stopall</field>
            <field name="action">action_cancel()</field>
        </record>
        
        <record id="sale.act_cancel2" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">cancel2</field>
            <field name="flow_stop">True</field>
            <field name="kind">stopall</field>
            <field name="action">action_cancel()</field>
        </record>
        
        <record id="sale.act_invoice" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">invoice</field>
            <field name="kind">subflow</field>
            <field name="subflow_id" search="[('name','=','account.invoice.basic')]"/>
            <field name="action">action_invoice_create()</field>
        </record>
        <record id="sale.act_invoice_except" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">invoice_except</field>
            <field name="kind">function</field>
            <field name="action">action_invoice_cancel()</field>
        </record>
        <record id="sale.act_invoice_end" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">invoice_end</field>
            <field name="kind">function</field>
            <field name="action">action_invoice_end()</field>
        </record>
        <record id="sale.act_invoice_cancel" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">invoice_cancel</field>
            <field name="flow_stop">True</field>
            <field name="kind">stopall</field>
            <field name="action">action_cancel()</field>
        </record>


